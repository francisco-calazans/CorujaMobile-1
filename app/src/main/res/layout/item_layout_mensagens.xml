<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFundo2Mensagem"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >


    <!--Aba com tudo-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/colorFundo1Mensagem"
        android:orientation="horizontal">
        <!--Aba com a imagem-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <ImageView
                android:id="@+id/imagem_remetente_mensagem"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                />
        </LinearLayout>

        <!--Aba com as informaÃ§oes-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/titulo_mensagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_weight="3"
                android:background="@color/colorFundo2Mensagem"
                />

            <TextView
                android:id="@+id/nome_remetente_mensagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/conteudo_mensagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_weight="5"
                android:background="@color/colorFundo2Mensagem"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
